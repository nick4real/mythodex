<UserControl x:Class="Mythodex.View.CustomWindowButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mythodex.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <Button Content="_" Style="{StaticResource CustomWindowButtonStyle}" Command="{Binding MinimizeCommand}" />
        <Button Content="[]" Style="{StaticResource CustomWindowButtonStyle}" Command="{Binding MaximizeCommand}" />
        <Button Content="X" Style="{StaticResource CustomWindowButtonStyle}" Command="{Binding CloseCommand}" />
    </StackPanel>
</UserControl>
